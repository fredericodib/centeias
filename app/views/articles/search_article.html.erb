<h1> Pesquisar Artigo </h1>
<hr />

<%= form_tag search_path, :method => :get do %>
	<div class="form-inline my-2 my-lg-0 mr-lg-2">
		<div class="input-group">
			<%= text_field_tag :search, nil, class: "form-control", placeholder: "Pesquise"%>
			<span class="input-group-append">
				<%= button_tag(type: "submit", class: "btn btn-primary") do %>
					<i class="fa fa-search"></i>
				<% end %>
			</span>
		</div>
	</div>
<% end %>

<% unless @articles.nil? %>
	<% if @articles.empty? %>
		<br />
		<h4> Nada foi achado </h4>
	<% else %>
		<% @articles.each do |article|%>
			<br />
			<div class="card" style="width: 100%;">
				<div class="card-body">
					<h5 class="card-title">
						<%= article.name %>
					</h5>
					<p class="card-text">
						<%= search_word(article.text, @word) %>
					</p>
					<a href="#" class="card-link">
						<%= link_to "Acessar", article_path(article) %>
					</a>
				</div>
			</div>
		<% end %>
	<% end %>
<% end %>
