<h1>
  <span> Requisições </span> &nbsp;
  <%= link_to new_request_path() do %>
    <i
      class="fa fa-plus title-icon"
      data-toggle="tooltip"
      data-placement="top"
      title="Adicionar"
    ></i>
  <% end %>
</h1>

<hr />
<br>

<table class="table table-hover">
  <thead  class="thead-dark">
    <tr>
      <th scope="col">Resolvido</th>
      <th scope="col">Mensagem</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td scope="row">
          <% if request.done %>
            <i class="fa fa-fw fa-check"></i>
          <% else %>
            <i class="fa fa-fw fa-times"></i>
          <% end %>
        </td>
        <td scope="row">
          
          <% if request.message.length < 50 %>
            <%= request.message %>
          <% else %>
            <%= request.message[0..50] + "..." %>
          <% end %>
        </td>
        <td scope="row">
          <%= link_to 'Acessar', request %>&nbsp;
          <%= link_to 'Editar', edit_request_path(request) %>&nbsp;
          <%= link_to 'Deletar', request, method: :delete, data: { confirm: 'Tem certeza?' } %>&nbsp;
        </td>
      </tr>
    <% end %>
  </tbody>
</table>