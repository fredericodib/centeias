<h1>
  <span> Requisição </span>
  <%= link_to edit_request_path(@request) do %>
    <i
      class="fa fa-edit title-icon"
      data-toggle="tooltip"
      data-placement="top"
      title="Editar"
    ></i>
  <% end %>
  <%= link_to request_path(@request), method: :delete, data: {confirm: "Essa operação é irreversível, tem certeza que deseja deletar?"} do %>
    <i
      class="fa fa-trash title-icon"
      data-toggle="tooltip"
      data-placement="top"
      title="Deletar"
    ></i>
  <% end %>
</h1>
<hr />

<p>
  <b>Criado Por: </b><%= @user.name %>
</p>

<% if @request.articles_id != 0 %>
  <p>
    <b>Artigo: </b><%= link_to @article.name, article_path(@article) %>
  </p>
<% else %>
  <p>
    <b>Sub Artigo: </b><%= link_to @sub_article.name, sub_article_path(@sub_article) %>
  </p>
<% end %>

<p>
  <strong>Resolvido:</strong>
  <% if @request.done %>
    <i class="fa fa-fw fa-check"></i>
  <% else %>
    <i class="fa fa-fw fa-times"></i>
  <% end %>
</p>

<p>
  <strong>Mensagem:</strong><br>
  <%= @request.message %>
</p>


<br>
<hr />
<%= link_to requests_path do %>
  <i
    class="fa fa-arrow-left title-icon"
  ></i>
  <span> Requisições </span>
<% end %>
&nbsp;&nbsp;&nbsp;&nbsp;
<% if @request.articles_id != 0 %>
  <%= link_to article_path(@article) do %>
    <i
      class="fa fa-arrow-left title-icon"
    ></i>
    <span> Artigo </span>
  <% end %>
<% elsif @request.sub_articles_id != 0 %>
  <%= link_to sub_articles_path(@sub_article) do %>
    <i
      class="fa fa-arrow-left title-icon"
    ></i>
    <span> Sub Artigo </span>
  <% end %>
<% end %>
