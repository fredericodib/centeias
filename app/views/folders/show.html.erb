<h1>
  <span> Pasta: </span>
  <%= @folder.name %>
  &nbsp;
  <%= link_to new_article_path(@folder.id) do %>
    <i
      class="fa fa-plus title-icon"
      data-toggle="tooltip"
      data-placement="top"
      title="Adicionar Artigo"
    ></i>
  <% end %>
  <%= link_to edit_folder_path(@folder) do %>
    <i
      class="fa fa-edit title-icon"
      data-toggle="tooltip"
      data-placement="top"
      title="Editar"
    ></i>
  <% end %>
  <%= link_to (@folder), method: :delete, data: {confirm: "Essa operação é irreversível, tem certeza que deseja deletar?"} do %>
    <i
      class="fa fa-trash title-icon"
      data-toggle="tooltip"
      data-placement="top"
      title="Deletar"
    ></i>
  <% end %>
</h1>
<hr />

<p>
  <b>Criado Por: </b><%= @user.name %>
</p>
<p>
  <b>Descrição: </b><%= @folder.description %>
</p>
<br>

<div style="width: 100%;padding: 0px 20px 0px 20px;">
  <% @folder.articles.each do |article|%>
    <br />
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h5 class="card-title">
          <%= article.name %>
        </h5>
        <p class="card-text">
          <%= article.description %>
        </p>
        <a href="#" class="card-link">
          <%= link_to "Acessar", article_path(article) %>
        </a> &nbsp;
        <a href="#" class="card-link">
          <%= link_to "Editar", edit_article_path(article) %>
        </a> &nbsp;
        <a href="#" class="card-link">
          <%= link_to "Deletar", article_path(article), method: :delete, data: {confirm: "Essa operação é irreversível, tem certeza que deseja deletar?"} %>
        </a>
      </div>
    </div>
  <% end %>
</div>

<br>
<hr />
<%= link_to folders_path() do %>
  <i
    class="fa fa-arrow-left title-icon"
  ></i>
  <span> Voltar </span>
<% end %>